<UserControl x:Class="BashkirTheatre14.View.Pages.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BashkirTheatre14.View.Pages"
             xmlns:pages="clr-namespace:BashkirTheatre14.ViewModel.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance pages:MainPageViewModel}">
    <Grid>
        <TextBlock Text="Главная страница"
                   FontSize="32"/>

        <Button Width="100"
                Height="100"
                Command="{Binding ToQuizSelectionCommand}"
                Content="Выбор викторины"/>
        
    </Grid>
</UserControl>
