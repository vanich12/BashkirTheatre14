<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:BashkirTheatre14.ViewModel.Controls"
                    xmlns:converter="clr-namespace:BashkirTheatre14.Converter"
                    xmlns:components="clr-namespace:BashkirTheatre14.View.Components">
    <Style TargetType="Button" x:Key="PurpleLightButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="40"
                            Padding="{TemplateBinding Padding}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType ="Button" x:Key="ProggressBar">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border
                            Background="White"
                            CornerRadius="40"
                            Padding="300 10">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Panel.ZIndex="1001"
                                Content="{TemplateBinding ContentStringFormat}"/>
                        </Border>
                        <Border 
                            Background="#96358c"
                            CornerRadius="40"
                            VerticalAlignment="Bottom"
                            Height="100"
                            Margin="0 0 0 0">
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource ProgressToWidthConverter}">
                                    <Binding Path="QuestionIndex" RelativeSource="{RelativeSource TemplatedParent}" />
                                    <Binding Path="QuestionList.Count" RelativeSource="{RelativeSource TemplatedParent}" />
                                </MultiBinding>
                            </Border.Width>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="QuizQuestionBut" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="76"
                                    CornerRadius="40">
                                <TextBlock x:Name="PlaceHolder"
                                           TextWrapping="Wrap"
                                           Foreground="{TemplateBinding Foreground}"
                                           Text="{TemplateBinding Content}"
                                           FontSize="{TemplateBinding FontSize}"
                                           VerticalAlignment="Center"
                                           IsHitTestVisible="False"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    <Style x:Key="ArrowButtonStyle" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                   <Image
                       Width="48"
                       Height="48"
                       Source="../Images/RightArrow.png"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate TargetType="components:RoundedButton" x:Key="BaseButtonTemplate">
        <Border
            CornerRadius="{TemplateBinding CornerRadius}"
            Width="{TemplateBinding Width}"
            Height="{TemplateBinding Height}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            Background="{TemplateBinding Background}">
            <ContentPresenter Content="{TemplateBinding Content}"
                              ContentTemplate="{TemplateBinding ContentTemplate}"
                              VerticalAlignment="Center"
                              Margin="{TemplateBinding Padding}"
                              HorizontalAlignment="Center"/>
        </Border>
    </ControlTemplate>

    <Style TargetType="components:RoundedButton" x:Key="BaseButtonStyle">
        <Setter Property="CornerRadius" Value="28"/>
        <Setter Property="Padding" Value="40 15"/>
        <Setter Property="Background" Value="{DynamicResource MainFillBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MainFillBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryBackgroundBrush}"/>
        <Setter Property="Template" Value="{DynamicResource BaseButtonTemplate}"/>
        <Setter Property="FontFamily" Value="{DynamicResource SegoeFontFamily}"/>
        <Setter Property="Focusable" Value="False"/>
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="{StaticResource WhitePurpleColor}"
                                 Storyboard.TargetProperty="(ButtonBase.Background).(SolidColorBrush.Color)"
                                 Duration="0:0:0.5"/>
                            <ColorAnimation To="{StaticResource DarkGray}"
                                 Storyboard.TargetProperty="(ButtonBase.Foreground).(SolidColorBrush.Color)"
                                 Duration="0:0:0.5"/>
                            <ColorAnimation To="{StaticResource WhitePurpleColor}"
                                 Storyboard.TargetProperty="(ButtonBase.BorderBrush).(SolidColorBrush.Color)"
                                 Duration="0:0:0.5"/>
                            <DoubleAnimation To="0.2"
                                  Storyboard.TargetProperty="(ButtonBase.Foreground).(SolidColorBrush.Opacity)"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation To="{StaticResource PurpleColor}"
                                 Storyboard.TargetProperty="(ButtonBase.Background).(SolidColorBrush.Color)"
                                 Duration="0:0:0.5"/>
                            <ColorAnimation To="{StaticResource WhitePurpleColor}"
                                 Storyboard.TargetProperty="(ButtonBase.Foreground).(SolidColorBrush.Color)"
                                 Duration="0:0:0.5"/>
                            <ColorAnimation To="{StaticResource PurpleColor}"
                                 Storyboard.TargetProperty="(ButtonBase.BorderBrush).(SolidColorBrush.Color)"
                                 Duration="0:0:0.5"/>
                            <DoubleAnimation To="1"
                                  Storyboard.TargetProperty="(ButtonBase.Foreground).(SolidColorBrush.Opacity)"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="components:RoundedButton" x:Key="AlterButtonStyle">
        <Setter Property="CornerRadius" Value="28"/>
        <Setter Property="Padding" Value="40 15"/>
        <Setter Property="Background" Value="{DynamicResource ThirdBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource MainFillBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MainFillBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Template" Value="{DynamicResource BaseButtonTemplate}"/>
        <Setter Property="FontFamily" Value="{DynamicResource SegoeFontFamily}"/>
    </Style>

    <Style TargetType="components:RoundedButton" x:Key="AlterGoBackButtonStyle" BasedOn="{StaticResource AlterButtonStyle}">
        <Setter Property="Template" Value="{DynamicResource GoBackButtonTemplate}"/>
        <Setter Property="CornerRadius" Value="16"/>
    </Style>

    <Style TargetType="TextBlock" x:Key ="MainPageCartTitle">
        <Setter Property="FontSize" Value="56"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key ="MainPageCartDescr">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>
    <Style x:Key="MainPageControl" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Image 
                            Width="530"
                            Height="1111"
                            Source="../Images/timeline.png"/>
                        <Border 
                        CornerRadius="40"
                        Background="Transparent"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="76 180"
                        Width="530"
                        Height="1111"
                        >
                        <StackPanel
                            Background="Transparent">
                            <Image
                                Width="350"
                                Height="350"
                                Source="../Images/QuizTimeIcon.png"/>
                            <StackPanel VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Foreground="White"
                                        Width="330"
                                        Text="{TemplateBinding Content}"
                                        Margin="0 132 0 38"
                                        Style="{StaticResource MainPageCartTitle}"
                                        TextAlignment="Left"
                                    />
                                   <Image 
                                       Height="48"
                                       Margin="0 95 0 0"
                                       Width="48"
                                       Source="../../Resources/Images/RightArrow.png"/>
                                </StackPanel>
                                <TextBlock
                                    Text="{TemplateBinding Tag}"
                                    TextAlignment="Left"
                                    Style="{StaticResource MainPageCartDescr}"
                                    TextWrapping="Wrap"
                                    Foreground="White"
                                    />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

