                            Width="530"
                            Height="1111"
                        >
                            <StackPanel
                                Background="Transparent">
                                <Image
                                    Width="350"
                                    Height="350"
                                    Source="../Images/QuizQuestionIcon.png"/>
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Width="330"
                                            Foreground="White"
                                            Text="{TemplateBinding Content}"
                                            Margin="0 132 0 38"
                                            Style="{StaticResource MainPageCartTitle}"
                                            TextAlignment="Left"
                                        />
                                        <Image 
                                            Height="48"
                                            Width="48"
                                            Margin="0 95 0 0"
                                            Source="../../Resources/Images/RightArrow.png"/>
                                    </StackPanel>
                                    <TextBlock
                                        Text="{TemplateBinding Tag}"
                                        TextAlignment="Left"
                                        Style="{StaticResource MainPageCartDescr}"
                                        TextWrapping="Wrap"
                                        Foreground="White"
                                    />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MainPageControTeathr" TargetType="Button" BasedOn="{StaticResource MainPageControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Image 
                            Width="530"
                            Height="1111"
                            Source="../Images/timeline.png"/>
                        <Border 
                            CornerRadius="40"
                            Background="Transparent"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="76 180"
                            Width="530"
                            Height="1111"
                        >
                            <StackPanel
                                Background="Transparent">
                                <Image
                                    Width="350"
                                    Height="350"
                                    Source="../Images/QuizMaskIcon.png"/>
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Foreground="White"
                                            Width="330"
                                            Text="{TemplateBinding Content}"
                                            Margin="0 132 0 38"
                                            Style="{StaticResource MainPageCartTitle}"
                                            TextAlignment="Left"
                                        />
                                        <Image 
                                            Height="48"
                                            Width="48"
                                            Margin="0 95 0 0"
                                            Source="../../Resources/Images/RightArrow.png"/>
                                    </StackPanel>
                                    <TextBlock
                                        Text="{TemplateBinding Tag}"
                                        TextAlignment="Left"
                                        Style="{StaticResource MainPageCartDescr}"
                                        TextWrapping="Wrap"
                                        Foreground="White"
                                    />
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>